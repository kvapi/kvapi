    "strictNullChecks": true,
    "lib": [
      "es5",
      "es2015.promise",
      "es2015.proxy"
    ],
    "outDir": "./dist",
    "alwaysStrict": true,
    "resolveJsonModule": true
  },
  "include": [
    "./src/**/*"
  ]
}